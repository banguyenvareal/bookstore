<div class="row">
  <div class="col-sm-3">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% @book_image.each_with_index do |book_image, index| %>
          <div class="item <%= "active" if index == 0 %> ">
            <img src="<%= book_image.url %>" class="custom-book-image">
          </div>
        <% end %>
      </div>
      <a class="left carousel-control custom-navigation-button" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control custom-navigation-button" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="row"><b class="custom-highlight-name"><%= @book.name %></b></div>
    <div class="row"><p><%= t('.quantity', quantity: @book.quantity) %></p></div>
    <div class="row"><p><%= t('.price', price: @book.price) %></p></div>
  </div>
  <div class="col-sm-3 text-center">
    <div class="row"><b class="custom-highlight-name"><%= t('.seller_name') %></b></div>
  </div>
</div>

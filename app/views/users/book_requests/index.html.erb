<div class="row">
  <% if @book_requests.present? %>
    <div class="col-sm-10 col-sm-offset-1">
      <%= render partial: 'book_requests/list', locals: { book_requests: @book_requests } %>
    </div>
  <% else %>
    <%= render partial: 'shared/list_empty', locals: { message: t('book_requests.list.empty'), title: t('book_request.create'), path: new_book_request_path } %>
  <% end %>
</div>
<div class="text-center">
  <%= paginate @book_requests %>
</div>

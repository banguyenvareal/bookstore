<% provide(:title, t('password_reset.title')) %>
<h1><%= t('password_reset.title') %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id]), html:{class:'form-group'}) do |f| %>
      <%= render partial: 'shared/error_messages', locals: {object: @user} %>
      <div class='form-group'>
        <%= f.label t('password_reset.password') %><span class="required">*</span>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class='form-group'>
       <%= f.label t('password_reset.password_confirmation') %><span class="required">*</span>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.submit t('password_reset.submit'), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

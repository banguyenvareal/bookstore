<% provide(:title, t('password_reset.title')) %>
<h1><%= t('password_reset.title') %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path, html: { class: 'form-group', id:'new_password_reset'}) do |f| %>
       <div class='form-group'>
         <%= f.label t('password_reset.phone') %><span class="required">*</span>
         <%= f.text_field :phone, class: 'form-control', maxlength: 10, size: 10 %>
       </div>
       <div class='form-group'>
        <%= f.label t('password_reset.email') %><span class="required">*</span>
        <%= f.email_field :email, class: 'form-control' %>
       </div>
       <div class='form-group'>
        <%= f.submit "Submit", class: "btn btn-primary" %>
       </div>
    <% end %>
    <script type="text/javascript">
      <%= render partial: 'validate.js' %>
    </script>
  </div>
</div>

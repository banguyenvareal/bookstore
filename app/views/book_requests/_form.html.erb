<div class="row">
  <%= form_for(book_request, html:{class: 'form-group', id: 'new_book_request'}) do |f|  %>
    <div class="col-sm-8 col-sm-offset-2">
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label t('book_request.name') %><span class="required">*</span>
          <%= f.text_field :name, class: 'form-control', onchange: "trimString(0)" %>
        </div>
        <div class="form-group">
          <%= f.label t('book_request.comment') %>
          <%= f.text_area :comment, class: 'form-control', rows: '2', onchange: "trimString(1)" %>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label t('book_request.quantity') %><span class="required">*</span>
              <%= f.number_field :quantity, class: 'form-control', min: 0%>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label t('book_request.budget') %><span class="required">*</span>
              <%= f.text_field :budget, class: 'form-control', onchange: "trimString(2)" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.file_field :book_request_images, accept: "image/*", id: "image-upload", multiple: true %>
        </div>
        <div class="form-check text-center">
          <%= f.submit submit_label, class: 'btn btn-primary col-sm-7' %>
        </div>
      </div>
      <div class="col-sm-6">
        <img
          id="img_prev"
          src="<%= image_path('default-book-cover.jpg') %>"
          alt="Book's cover"
          class="img-thumbnail book-image"
        />
      </div>
    </div>
  <% end %>
  <script type="text/javascript">
    <%= render partial: 'validate.js' %>
  </script>
</div>

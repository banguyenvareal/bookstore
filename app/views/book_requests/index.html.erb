<div class="row">
  <% @book_requests&.each do |book_request| %>
	  <%= link_to book_request_path book_request do %>
		  <div class="col-md-3 book-request">
			  <div class="row">
				  <img src="<%= book_request.book_request_images&.first.thumb_url %>
				    "alt = "Book's cover" class="book-request-image">
					<div class="col-md-12 book-request-content" >
					  <p class="book-request-title"><%= book_request.name %></p>
						<p class="book-request-detail">Quantity: 2</p>
	          <p class="book-request-detail">Budget: 10000</p>
	          <p class="book-request-detail"><span title="<%= book_request.comment %>">
	          	<%= truncate(book_request.comment, length: 20) %></span>
	          </p>
					</div>
				</div>
			</div>
		<% end %>
  <% end %>
</div>
